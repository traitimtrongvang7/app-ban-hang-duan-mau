<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    android:layout_margin="10dp"
    >
<LinearLayout
    android:padding="10dp"
    android:background="#F3EADF"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:src="@mipmap/type"
        android:layout_weight="2"
        android:layout_marginEnd="10dp"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="6"
        android:layout_height="wrap_content"
        android:orientation="vertical"
    android:layout_gravity="center_vertical"
        >

        <TextView
            android:id="@+id/tvMaLoai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID: 1"
            android:textSize="24sp"
            />

        <TextView
            android:id="@+id/tvTypeTenLoai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hành động"
            android:textSize="30sp"
            />
    </LinearLayout>
    
    <ImageView
        android:id="@+id/ivTypeEdit"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:src="@drawable/edit_24"
        android:layout_weight="1"
        />
    <ImageView
        android:id="@+id/ivTypeDelete"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:src="@drawable/delete_24"
        android:layout_weight="1"
        />
    
</LinearLayout>
</androidx.cardview.widget.CardView>